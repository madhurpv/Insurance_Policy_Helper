<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000"
    android:backgroundTint="#00000000"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="#F8AB82"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Birthday Message 2"
                android:textColor="#222222"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/message2EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:padding="5dp"
                android:minLines="5"
                android:background="#FFD5B6"
                android:hint="Message 2 Text..."
                android:textColor="#FF6C00"
                android:textColorHint="#FFBB8A"
                android:gravity="top"
                app:layout_constraintTop_toBottomOf="@+id/dialogTitle" />

            <TextView
                android:id="@+id/textViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:text="Tip : Add '<name>' for entering someone's name, and '<date>' for entering the date"
                android:textColor="#AF4A00"
                app:layout_constraintTop_toBottomOf="@+id/message2EditText"
                tools:layout_editor_absoluteX="10dp" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF3D0D"
                android:text="Edit Details <DUMMY>"
                android:textColor="#FFCEB4"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewDetails" />

            <!--DELETE BUTTON-->
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Btn2 <DUMMY>"
                android:textColor="#FFCEB4"
                android:backgroundTint="#FF3D0D"
                app:layout_constraintTop_toBottomOf="@+id/editButton" />

            <Button
                android:id="@+id/closeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Close"
                android:textColor="#FFCEB4"
                android:backgroundTint="#FF3D0D"
                app:layout_constraintTop_toBottomOf="@+id/button2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
